<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extension de la vue formulaire des commandes de vente pour Wave Money -->
    <record id="view_order_form_wave_money" model="ir.ui.view">
        <field name="name">sale.order.form.wave.money</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_wave_transactions" type="object"
                    class="oe_stat_button" icon="fa-mobile"
                    attrs="{'invisible': [('wave_transaction_count', '=', 0)]}">
                    <field name="wave_transaction_count" widget="statinfo"
                        string="Transactions Wave" />
                </button>
            </xpath>

            <!-- 
            <xpath expr="//header" position="inside">
                <button name="action_initiate_wave_payment" string="Payer avec Wave" type="object"
                    class="btn-primary" />
            </xpath> -->
        </field>
    </record>
</odoo>